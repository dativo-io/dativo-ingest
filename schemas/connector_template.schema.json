{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://dativo.io/schemas/connector_template.schema.json",
  "title": "Dativo Connector Template (Execution Metadata)",
  "type": "object",
  "required": ["name", "version"],
  "properties": {
    "name": { "type": "string", "minLength": 1 },
    "version": { "type": "integer", "minimum": 1 },

    "auth": {
      "type": "object",
      "properties": {
        "scheme": {
          "type": "string",
          "enum": [
            "oauth2_bearer",
            "bearer_api_key",
            "google_service_account",
            "basic",
            "none"
          ]
        },
        "header": { "type": "string" },
        "format": { "type": "string" },
        "env": { "type": "string" }
      },
      "additionalProperties": false
    },

    "endpoints": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "required": ["path", "method"],
        "properties": {
          "path": { "type": "string", "minLength": 1 },
          "method": { "type": "string", "enum": ["GET", "POST", "PUT", "PATCH", "DELETE"] },
          "params": {
            "type": "object",
            "additionalProperties": { "type": ["string", "number", "boolean", "array", "null"] }
          },
          "incremental": {
            "type": "object",
            "properties": {
              "strategy": {
                "type": "string",
                "enum": ["updated_after", "updated_at", "created", "file_modified_time", "spreadsheet_modified_time", "cdc"]
              },
              "cursor_param": { "type": "string" },
              "cursor_field_default": { "type": "string" },
              "lookback_days_default": { "type": "integer", "minimum": 0 }
            },
            "additionalProperties": false
          },
          "pagination": {
            "type": "object",
            "properties": {
              "style": { "type": "string", "enum": ["cursor", "offset_limit", "token", "none"] },
              "request": {
                "type": "object",
                "properties": {
                  "cursor_param": { "type": "string" },
                  "page_size_param": { "type": "string" }
                },
                "additionalProperties": false
              },
              "response": {
                "type": "object",
                "properties": {
                  "next_cursor_jsonpath": { "type": "string" }
                },
                "additionalProperties": false
              }
            },
            "additionalProperties": false
          }
        },
        "additionalProperties": false
      }
    },

    "objects": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "incremental": {
            "type": "object",
            "properties": {
              "strategy": {
                "type": "string",
                "enum": ["updated_after", "updated_at", "created", "file_modified_time", "spreadsheet_modified_time", "cdc"]
              },
              "lookback_days_default": { "type": "integer", "minimum": 0 }
            },
            "additionalProperties": false
          },
          "read": {
            "type": "object",
            "properties": {
              "range_mode": { "type": "string", "enum": ["full_sheet", "range", "custom"] },
              "header_row": { "type": "integer", "minimum": 0 }
            },
            "additionalProperties": false
          }
        },
        "additionalProperties": false
      }
    },

    "api": {
      "type": "object",
      "properties": {
        "base_url": { "type": "string", "minLength": 1 },
        "file_metadata_path": { "type": "string" },
        "download_path": { "type": "string" },
        "values_path": { "type": "string" }
      },
      "additionalProperties": false
    },

    "rate_limits": {
      "type": "object",
      "properties": {
        "rps_default": { "type": "number", "minimum": 0 },
        "burst_default": { "type": "number", "minimum": 0 },
        "retry": {
          "type": "object",
          "properties": {
            "max_retries": { "type": "integer", "minimum": 0 },
            "backoff": { "type": "string", "enum": ["fixed", "exponential", "jitter"] },
            "max_backoff_seconds": { "type": "integer", "minimum": 0 }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },

    "transform": {
      "type": "object",
      "properties": {
        "flatten": { "type": "boolean" },
        "date_coerce": {
          "type": "array",
          "items": { "type": "string" }
        }
      },
      "additionalProperties": false
    },

    "schema_hints": {
      "type": "object",
      "properties": {
        "primary_key": {
          "type": "array",
          "items": { "type": "string" }
        },
        "recommended_fields": {
          "type": "array",
          "items": { "type": "string" }
        }
      },
      "additionalProperties": false
    },

    "connection": {
      "type": "object",
      "properties": {
        "driver": { "type": "string", "enum": ["postgresql", "mysql", "mssql", "oracle", "snowflake", "bigquery"] },
        "dsn_env": { "type": "string" },
        "defaults": {
          "type": "object",
          "properties": {
            "fetch_size": { "type": "integer", "minimum": 1 },
            "session_parameters": { "type": "object" }
          },
          "additionalProperties": true
        }
      },
      "additionalProperties": false
    },

    "capabilities": {
      "type": "object",
      "properties": {
        "requires_tables": { "type": "boolean" },
        "supports_queries": { "type": "boolean" },
        "supports_incremental": { "type": "boolean" }
      },
      "additionalProperties": false
    },

    "incremental": {
      "type": "object",
      "properties": {
        "strategy": { "type": "string", "enum": ["updated_after", "updated_at", "created", "file_modified_time", "spreadsheet_modified_time", "cdc"] },
        "cursor_field_default": { "type": "string" },
        "lookback_days_default": { "type": "integer", "minimum": 0 }
      },
      "additionalProperties": false
    },

    "retry": {
      "type": "object",
      "properties": {
        "max_retries": { "type": "integer", "minimum": 0 },
        "backoff": { "type": "string", "enum": ["fixed", "exponential", "jitter"] },
        "max_backoff_seconds": { "type": "integer", "minimum": 0 }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}

