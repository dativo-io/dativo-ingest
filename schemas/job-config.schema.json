{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://dativo.io/schemas/job-config.schema.json",
  "title": "Dativo Job Configuration Schema",
  "description": "Schema for validating Dativo ETL job configuration files",
  "type": "object",
  "required": ["tenant_id", "source_connector_path", "target_connector_path", "asset_path"],
  "properties": {
    "$schema": {
      "type": "string",
      "description": "Reference to this schema",
      "default": "schemas/job-config.schema.json"
    },
    "tenant_id": {
      "type": "string",
      "description": "Tenant identifier for multi-tenant deployments",
      "minLength": 1
    },
    "environment": {
      "type": "string",
      "description": "Environment name (e.g., dev, staging, prod)"
    },
    "source_connector": {
      "type": "string",
      "description": "Source connector name (optional, inferred from path)"
    },
    "source_connector_path": {
      "type": "string",
      "description": "Path to source connector recipe YAML file",
      "minLength": 1
    },
    "target_connector": {
      "type": "string",
      "description": "Target connector name (optional, inferred from path)"
    },
    "target_connector_path": {
      "type": "string",
      "description": "Path to target connector recipe YAML file",
      "minLength": 1
    },
    "asset": {
      "type": "string",
      "description": "Asset name (optional, inferred from path)"
    },
    "asset_path": {
      "type": "string",
      "description": "Path to asset definition YAML file",
      "minLength": 1
    },
    "source": {
      "type": "object",
      "description": "Source-specific configuration (merged with connector recipe)",
      "properties": {
        "custom_reader": {
          "type": "string",
          "description": "Path to custom reader plugin (format: path/to/module.py:ClassName or path/to/lib.so:function_name)"
        },
        "tables": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {"type": "string"},
              "object": {"type": "string"}
            },
            "required": ["name"]
          }
        },
        "files": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "path": {"type": "string"},
              "object": {"type": "string"},
              "id": {"type": "string"}
            },
            "required": ["path"]
          }
        },
        "objects": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "connection": {
          "type": "object",
          "description": "Connection configuration (connector-specific)"
        },
        "credentials": {
          "type": "object",
          "description": "Credentials configuration (connector-specific)"
        },
        "incremental": {
          "type": "object",
          "properties": {
            "strategy": {
              "type": "string",
              "enum": ["full_refresh", "incremental", "updated_at", "file_modified_time", "spreadsheet_modified_time"]
            },
            "cursor_field": {
              "type": ["string", "null"],
              "description": "Field name for cursor-based incremental loading (null for full refresh)"
            },
            "lookback_days": {
              "type": ["integer", "null"],
              "minimum": 0,
              "description": "Number of days to look back for incremental loading"
            },
            "state_path": {
              "type": ["string", "null"],
              "description": "Path to state file for incremental loading"
            }
          }
        },
        "engine": {
          "type": "object",
          "properties": {
            "options": {"type": "object"}
          }
        }
      },
      "additionalProperties": true
    },
    "target": {
      "type": "object",
      "description": "Target-specific configuration (merged with connector recipe)",
      "properties": {
        "custom_writer": {
          "type": "string",
          "description": "Path to custom writer plugin (format: path/to/module.py:ClassName or path/to/lib.so:function_name)"
        },
        "file_format": {
          "type": "string",
          "enum": ["parquet", "iceberg", "delta", "csv", "json"]
        },
        "connection": {
          "type": "object",
          "description": "Connection configuration (connector-specific)"
        },
        "catalog": {
          "type": "object",
          "description": "Iceberg catalog configuration"
        },
        "markdown_kv_storage": {
          "type": "object",
          "properties": {
            "mode": {
              "type": "string",
              "enum": ["string", "structured"]
            }
          }
        },
        "engine": {
          "type": "object",
          "properties": {
            "options": {"type": "object"}
          }
        }
      },
      "additionalProperties": true
    },
    "schema_validation_mode": {
      "type": "string",
      "enum": ["strict", "warn"],
      "default": "strict",
      "description": "Schema validation mode: 'strict' fails on errors, 'warn' logs warnings"
    },
    "retry_config": {
      "type": "object",
      "properties": {
        "max_attempts": {"type": "integer", "minimum": 1, "maximum": 10},
        "initial_delay_seconds": {"type": "number", "minimum": 0},
        "max_delay_seconds": {"type": "number", "minimum": 0},
        "backoff_multiplier": {"type": "number", "minimum": 1}
      }
    },
    "logging": {
      "type": "object",
      "properties": {
        "level": {
          "type": "string",
          "enum": ["DEBUG", "INFO", "WARNING", "ERROR", "CRITICAL"],
          "default": "INFO"
        },
        "redaction": {
          "type": "boolean",
          "default": false,
          "description": "Whether to redact sensitive information in logs"
        }
      }
    },
    "infrastructure": {
      "type": "object",
      "description": "External infrastructure configuration for cloud-agnostic deployment via Terraform",
      "properties": {
        "provider": {
          "type": "string",
          "enum": ["aws", "gcp"],
          "description": "Cloud provider (aws or gcp)"
        },
        "runtime": {
          "type": "object",
          "description": "Runtime environment configuration",
          "properties": {
            "compute_type": {
              "type": "string",
              "description": "Compute resource type (e.g., ecs_task, cloud_run_job, lambda, dataproc)"
            },
            "region": {
              "type": "string",
              "description": "Cloud region for resource deployment"
            },
            "vpc_id": {
              "type": "string",
              "description": "VPC identifier for network isolation"
            },
            "subnet_ids": {
              "type": "array",
              "items": {"type": "string"},
              "description": "Subnet identifiers for network placement"
            },
            "security_group_ids": {
              "type": "array",
              "items": {"type": "string"},
              "description": "Security group identifiers (AWS) or firewall rules (GCP)"
            }
          }
        },
        "resources": {
          "type": "object",
          "description": "Terraform resource references for external infrastructure",
          "properties": {
            "compute_resource": {
              "type": "string",
              "description": "Terraform resource reference (e.g., aws_ecs_task_definition.main.arn)"
            },
            "execution_role": {
              "type": "string",
              "description": "Terraform resource reference for execution IAM role"
            },
            "task_role": {
              "type": "string",
              "description": "Terraform resource reference for task IAM role (AWS ECS)"
            },
            "service_account": {
              "type": "string",
              "description": "Terraform resource reference for service account (GCP)"
            },
            "storage_bucket": {
              "type": "string",
              "description": "Terraform resource reference for storage bucket"
            },
            "secrets_manager": {
              "type": "string",
              "description": "Terraform resource reference for secrets manager"
            }
          }
        },
        "tags": {
          "type": "object",
          "description": "Tags for cost allocation, compliance, and resource traceability",
          "additionalProperties": {
            "type": "string"
          },
          "properties": {
            "CostCenter": {
              "type": "string",
              "description": "Cost center for financial allocation (AWS tag)"
            },
            "Project": {
              "type": "string",
              "description": "Project identifier (GCP label / AWS tag)"
            },
            "Environment": {
              "type": "string",
              "description": "Environment name (dev, staging, prod)"
            },
            "Team": {
              "type": "string",
              "description": "Team or owner identifier"
            },
            "Compliance": {
              "type": "string",
              "description": "Compliance classification"
            },
            "DataClassification": {
              "type": "string",
              "description": "Data classification level"
            }
          }
        },
        "metadata": {
          "type": "object",
          "description": "Additional metadata to flow into Terraform module",
          "additionalProperties": true
        }
      }
    }
  },
  "additionalProperties": false
}

