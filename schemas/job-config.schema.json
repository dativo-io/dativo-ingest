{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://dativo.io/schemas/job-config.schema.json",
  "title": "Dativo Job Configuration Schema",
  "description": "Schema for validating Dativo ETL job configuration files",
  "type": "object",
  "required": ["tenant_id", "source_connector_path", "target_connector_path", "asset_path"],
  "properties": {
    "$schema": {
      "type": "string",
      "description": "Reference to this schema",
      "default": "schemas/job-config.schema.json"
    },
    "tenant_id": {
      "type": "string",
      "description": "Tenant identifier for multi-tenant deployments",
      "minLength": 1
    },
    "environment": {
      "type": "string",
      "description": "Environment name (e.g., dev, staging, prod)"
    },
    "source_connector": {
      "type": "string",
      "description": "Source connector name (optional, inferred from path)"
    },
    "source_connector_path": {
      "type": "string",
      "description": "Path to source connector recipe YAML file",
      "minLength": 1
    },
    "target_connector": {
      "type": "string",
      "description": "Target connector name (optional, inferred from path)"
    },
    "target_connector_path": {
      "type": "string",
      "description": "Path to target connector recipe YAML file",
      "minLength": 1
    },
    "asset": {
      "type": "string",
      "description": "Asset name (optional, inferred from path)"
    },
    "asset_path": {
      "type": "string",
      "description": "Path to asset definition YAML file",
      "minLength": 1
    },
    "source": {
      "type": "object",
      "description": "Source-specific configuration (merged with connector recipe)",
      "properties": {
        "custom_reader": {
          "type": "string",
          "description": "Path to custom reader plugin (format: path/to/module.py:ClassName or path/to/lib.so:function_name)"
        },
        "tables": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {"type": "string"},
              "object": {"type": "string"}
            },
            "required": ["name"]
          }
        },
        "files": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "path": {"type": "string"},
              "object": {"type": "string"},
              "id": {"type": "string"}
            },
            "required": ["path"]
          }
        },
        "objects": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "connection": {
          "type": "object",
          "description": "Connection configuration (connector-specific)"
        },
        "credentials": {
          "type": "object",
          "description": "Credentials configuration (connector-specific)"
        },
        "incremental": {
          "type": "object",
          "properties": {
            "strategy": {
              "type": "string",
              "enum": ["full_refresh", "incremental", "updated_at", "file_modified_time", "spreadsheet_modified_time"]
            },
            "cursor_field": {
              "type": ["string", "null"],
              "description": "Field name for cursor-based incremental loading (null for full refresh)"
            },
            "lookback_days": {
              "type": ["integer", "null"],
              "minimum": 0,
              "description": "Number of days to look back for incremental loading"
            },
            "state_path": {
              "type": ["string", "null"],
              "description": "Path to state file for incremental loading"
            }
          }
        },
        "engine": {
          "type": "object",
          "properties": {
            "options": {"type": "object"}
          }
        }
      },
      "additionalProperties": true
    },
    "target": {
      "type": "object",
      "description": "Target-specific configuration (merged with connector recipe)",
      "properties": {
        "custom_writer": {
          "type": "string",
          "description": "Path to custom writer plugin (format: path/to/module.py:ClassName or path/to/lib.so:function_name)"
        },
        "file_format": {
          "type": "string",
          "enum": ["parquet", "iceberg", "delta", "csv", "json"]
        },
        "connection": {
          "type": "object",
          "description": "Connection configuration (connector-specific)"
        },
        "catalog": {
          "type": "object",
          "description": "Iceberg catalog configuration"
        },
        "markdown_kv_storage": {
          "type": "object",
          "properties": {
            "mode": {
              "type": "string",
              "enum": ["string", "structured"]
            }
          }
        },
        "engine": {
          "type": "object",
          "properties": {
            "options": {"type": "object"}
          }
        }
      },
      "additionalProperties": true
    },
    "schema_validation_mode": {
      "type": "string",
      "enum": ["strict", "warn"],
      "default": "strict",
      "description": "Schema validation mode: 'strict' fails on errors, 'warn' logs warnings"
    },
    "retry_config": {
      "type": "object",
      "properties": {
        "max_attempts": {"type": "integer", "minimum": 1, "maximum": 10},
        "initial_delay_seconds": {"type": "number", "minimum": 0},
        "max_delay_seconds": {"type": "number", "minimum": 0},
        "backoff_multiplier": {"type": "number", "minimum": 1}
      }
    },
    "logging": {
      "type": "object",
      "properties": {
        "level": {
          "type": "string",
          "enum": ["DEBUG", "INFO", "WARNING", "ERROR", "CRITICAL"],
          "default": "INFO"
        },
        "redaction": {
          "type": "boolean",
          "default": false,
          "description": "Whether to redact sensitive information in logs"
        }
      }
    },
    "infrastructure": {
      "type": "object",
      "description": "External infrastructure configuration for cloud-agnostic deployment",
      "properties": {
        "provider": {
          "type": "string",
          "enum": ["aws", "gcp", "azure"],
          "description": "Cloud provider (aws, gcp, azure)"
        },
        "runtime": {
          "type": "object",
          "description": "Runtime environment configuration",
          "properties": {
            "type": {
              "type": "string",
              "enum": ["dagster", "airflow", "kubernetes", "ecs", "cloud_run"],
              "description": "Runtime orchestration type"
            },
            "cluster_name": {
              "type": "string",
              "description": "Cluster or environment name"
            },
            "namespace": {
              "type": "string",
              "description": "Kubernetes namespace or logical grouping"
            },
            "service_account": {
              "type": "string",
              "description": "Service account or IAM role for execution"
            }
          }
        },
        "compute": {
          "type": "object",
          "description": "Compute resource requirements",
          "properties": {
            "cpu": {
              "type": "string",
              "description": "CPU request (e.g., '2', '500m')"
            },
            "memory": {
              "type": "string",
              "description": "Memory request (e.g., '4Gi', '2048Mi')"
            },
            "instance_type": {
              "type": "string",
              "description": "Cloud instance type (e.g., 't3.medium', 'n1-standard-2')"
            },
            "max_runtime_seconds": {
              "type": "integer",
              "description": "Maximum runtime in seconds before timeout"
            }
          }
        },
        "networking": {
          "type": "object",
          "description": "Network configuration",
          "properties": {
            "vpc_id": {
              "type": "string",
              "description": "VPC or network ID"
            },
            "subnet_ids": {
              "type": "array",
              "items": {"type": "string"},
              "description": "Subnet IDs for deployment"
            },
            "security_group_ids": {
              "type": "array",
              "items": {"type": "string"},
              "description": "Security group IDs"
            },
            "private_networking": {
              "type": "boolean",
              "default": true,
              "description": "Whether to use private networking"
            }
          }
        },
        "storage": {
          "type": "object",
          "description": "Storage configuration",
          "properties": {
            "bucket": {
              "type": "string",
              "description": "S3/GCS bucket name for data output"
            },
            "prefix": {
              "type": "string",
              "description": "Storage prefix/path"
            },
            "kms_key_id": {
              "type": "string",
              "description": "KMS key ID for encryption"
            }
          }
        },
        "tags": {
          "type": "object",
          "description": "Infrastructure tags for cost allocation and compliance",
          "additionalProperties": {"type": "string"}
        },
        "terraform": {
          "type": "object",
          "description": "Terraform module reference for external infrastructure",
          "properties": {
            "module_source": {
              "type": "string",
              "description": "Terraform module source (e.g., git::https://... or registry path)"
            },
            "module_version": {
              "type": "string",
              "description": "Terraform module version"
            },
            "workspace": {
              "type": "string",
              "description": "Terraform workspace name"
            },
            "backend_config": {
              "type": "object",
              "description": "Terraform backend configuration",
              "additionalProperties": true
            },
            "variables": {
              "type": "object",
              "description": "Additional Terraform variables",
              "additionalProperties": true
            }
          }
        },
        "dagster": {
          "type": "object",
          "description": "Dagster-specific configuration",
          "properties": {
            "code_location": {
              "type": "string",
              "description": "Dagster code location name"
            },
            "repository": {
              "type": "string",
              "description": "Dagster repository name"
            },
            "op_config": {
              "type": "object",
              "description": "Dagster op configuration overrides",
              "additionalProperties": true
            },
            "resource_requirements": {
              "type": "object",
              "description": "Dagster resource requirements",
              "additionalProperties": true
            }
          }
        }
      }
    },
    "finops": {
      "type": "object",
      "description": "FinOps metadata for cost attribution",
      "properties": {
        "cost_center": {
          "type": "string",
          "description": "Cost center code"
        },
        "business_tags": {
          "type": "array",
          "items": {"type": "string"},
          "description": "Business tags for categorization"
        },
        "project": {
          "type": "string",
          "description": "Project name"
        },
        "environment": {
          "type": "string",
          "enum": ["dev", "staging", "prod"],
          "description": "Environment name"
        }
      }
    },
    "classification_overrides": {
      "type": "object",
      "description": "Field-level classification overrides",
      "additionalProperties": {"type": "string"}
    },
    "governance_overrides": {
      "type": "object",
      "description": "Governance metadata overrides",
      "properties": {
        "retention_days": {
          "type": "integer",
          "description": "Data retention period in days"
        },
        "owner": {
          "type": "string",
          "description": "Data owner email"
        }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": false
}

