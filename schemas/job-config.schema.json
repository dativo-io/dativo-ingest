{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://dativo.io/schemas/job-config.schema.json",
  "title": "Dativo Job Configuration Schema",
  "description": "Schema for validating Dativo ETL job configuration files",
  "type": "object",
  "required": ["tenant_id", "source_connector_path", "target_connector_path", "asset_path"],
  "properties": {
    "$schema": {
      "type": "string",
      "description": "Reference to this schema",
      "default": "schemas/job-config.schema.json"
    },
    "tenant_id": {
      "type": "string",
      "description": "Tenant identifier for multi-tenant deployments",
      "minLength": 1
    },
    "environment": {
      "type": "string",
      "description": "Environment name (e.g., dev, staging, prod)"
    },
    "source_connector": {
      "type": "string",
      "description": "Source connector name (optional, inferred from path)"
    },
    "source_connector_path": {
      "type": "string",
      "description": "Path to source connector recipe YAML file",
      "minLength": 1
    },
    "target_connector": {
      "type": "string",
      "description": "Target connector name (optional, inferred from path)"
    },
    "target_connector_path": {
      "type": "string",
      "description": "Path to target connector recipe YAML file",
      "minLength": 1
    },
    "asset": {
      "type": "string",
      "description": "Asset name (optional, inferred from path)"
    },
    "asset_path": {
      "type": "string",
      "description": "Path to asset definition YAML file",
      "minLength": 1
    },
    "source": {
      "type": "object",
      "description": "Source-specific configuration (merged with connector recipe)",
      "properties": {
        "custom_reader": {
          "type": "string",
          "description": "Path to custom reader plugin (format: path/to/module.py:ClassName or path/to/lib.so:function_name)"
        },
        "tables": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {"type": "string"},
              "object": {"type": "string"}
            },
            "required": ["name"]
          }
        },
        "files": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "path": {"type": "string"},
              "object": {"type": "string"},
              "id": {"type": "string"}
            },
            "required": ["path"]
          }
        },
        "objects": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "connection": {
          "type": "object",
          "description": "Connection configuration (connector-specific)"
        },
        "credentials": {
          "type": "object",
          "description": "Credentials configuration (connector-specific)"
        },
        "incremental": {
          "type": "object",
          "properties": {
            "strategy": {
              "type": "string",
              "enum": ["full_refresh", "incremental", "updated_at", "file_modified_time", "spreadsheet_modified_time"]
            },
            "cursor_field": {
              "type": ["string", "null"],
              "description": "Field name for cursor-based incremental loading (null for full refresh)"
            },
            "lookback_days": {
              "type": ["integer", "null"],
              "minimum": 0,
              "description": "Number of days to look back for incremental loading"
            },
            "state_path": {
              "type": ["string", "null"],
              "description": "Path to state file for incremental loading"
            }
          }
        },
        "engine": {
          "type": "object",
          "properties": {
            "options": {"type": "object"}
          }
        }
      },
      "additionalProperties": true
    },
    "target": {
      "type": "object",
      "description": "Target-specific configuration (merged with connector recipe)",
      "properties": {
        "custom_writer": {
          "type": "string",
          "description": "Path to custom writer plugin (format: path/to/module.py:ClassName or path/to/lib.so:function_name)"
        },
        "file_format": {
          "type": "string",
          "enum": ["parquet", "iceberg", "delta", "csv", "json"]
        },
        "connection": {
          "type": "object",
          "description": "Connection configuration (connector-specific)"
        },
        "catalog": {
          "type": "object",
          "description": "Iceberg catalog configuration"
        },
        "markdown_kv_storage": {
          "type": "object",
          "properties": {
            "mode": {
              "type": "string",
              "enum": ["string", "structured"]
            }
          }
        },
        "engine": {
          "type": "object",
          "properties": {
            "options": {"type": "object"}
          }
        }
      },
      "additionalProperties": true
    },
    "schema_validation_mode": {
      "type": "string",
      "enum": ["strict", "warn"],
      "default": "strict",
      "description": "Schema validation mode: 'strict' fails on errors, 'warn' logs warnings"
    },
    "retry_config": {
      "type": "object",
      "properties": {
        "max_attempts": {"type": "integer", "minimum": 1, "maximum": 10},
        "initial_delay_seconds": {"type": "number", "minimum": 0},
        "max_delay_seconds": {"type": "number", "minimum": 0},
        "backoff_multiplier": {"type": "number", "minimum": 1}
      }
    },
    "logging": {
      "type": "object",
      "properties": {
        "level": {
          "type": "string",
          "enum": ["DEBUG", "INFO", "WARNING", "ERROR", "CRITICAL"],
          "default": "INFO"
        },
        "redaction": {
          "type": "boolean",
          "default": false,
          "description": "Whether to redact sensitive information in logs"
        }
      }
    },
    "observability": {
      "type": "object",
      "description": "Optional cloud observability destinations (AWS CloudWatch and/or GCP Cloud Logging)",
      "properties": {
        "aws": {
          "type": "object",
          "required": ["region", "log_group"],
          "properties": {
            "enabled": {
              "type": "boolean",
              "default": true
            },
            "region": {
              "type": "string",
              "description": "AWS region for CloudWatch (e.g., us-east-1)"
            },
            "log_group": {
              "type": "string",
              "description": "CloudWatch Log Group name"
            },
            "log_stream_prefix": {
              "type": "string",
              "description": "Prefix applied to generated log stream names"
            },
            "log_stream_name": {
              "type": "string",
              "description": "Optional override for the log stream name"
            },
            "create_log_group": {
              "type": "boolean",
              "default": true,
              "description": "Create the log group automatically if it does not exist"
            },
            "retention_days": {
              "type": ["integer", "null"],
              "minimum": 1,
              "description": "Retention policy in days for the log group"
            },
            "metrics_namespace": {
              "type": ["string", "null"],
              "description": "Optional CloudWatch namespace used for emitting job-level metrics"
            },
            "metric_dimensions": {
              "type": "object",
              "additionalProperties": {
                "type": "string"
              },
              "description": "Additional CloudWatch metric dimensions (TenantId and Job are always set)"
            }
          },
          "additionalProperties": false
        },
        "gcp": {
          "type": "object",
          "required": ["project_id"],
          "properties": {
            "enabled": {
              "type": "boolean",
              "default": true
            },
            "project_id": {
              "type": "string",
              "description": "GCP project that owns Cloud Logging destination"
            },
            "log_name": {
              "type": "string",
              "default": "dativo_ingest",
              "description": "Cloud Logging log name"
            },
            "credentials_path": {
              "type": ["string", "null"],
              "description": "Optional path to a service-account JSON key"
            },
            "resource_type": {
              "type": "string",
              "default": "global",
              "description": "Monitored resource type for Cloud Logging entries"
            },
            "labels": {
              "type": "object",
              "additionalProperties": {
                "type": "string"
              },
              "description": "Labels applied to every Cloud Logging entry"
            }
          },
          "additionalProperties": false
        }
      },
      "minProperties": 1,
      "additionalProperties": false
    },
    "catalog": {
      "type": "object",
      "description": "Data catalog configuration for lineage and metadata push (optional)",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["openmetadata", "aws_glue", "databricks_unity", "nessie"],
          "description": "Catalog type"
        },
        "connection": {
          "type": "object",
          "description": "Catalog connection configuration (varies by catalog type)",
          "additionalProperties": true
        },
        "database": {
          "type": "string",
          "description": "Database/schema name (required for some catalogs)"
        },
        "table_name": {
          "type": "string",
          "description": "Table name override (defaults to asset name)"
        },
        "push_lineage": {
          "type": "boolean",
          "default": true,
          "description": "Whether to push lineage information"
        },
        "push_metadata": {
          "type": "boolean",
          "default": true,
          "description": "Whether to push metadata (tags, owners, etc.)"
        }
      },
      "required": ["type", "connection"],
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}

