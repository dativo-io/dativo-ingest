{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://dativo.io/schemas/job-config.schema.json",
  "title": "Dativo Job Configuration Schema",
  "description": "Schema for validating Dativo ETL job configuration files",
  "type": "object",
  "required": ["tenant_id", "source_connector_path", "target_connector_path", "asset_path"],
  "properties": {
    "$schema": {
      "type": "string",
      "description": "Reference to this schema",
      "default": "schemas/job-config.schema.json"
    },
    "tenant_id": {
      "type": "string",
      "description": "Tenant identifier for multi-tenant deployments",
      "minLength": 1
    },
    "environment": {
      "type": "string",
      "description": "Environment name (e.g., dev, staging, prod)"
    },
    "source_connector": {
      "type": "string",
      "description": "Source connector name (optional, inferred from path)"
    },
    "source_connector_path": {
      "type": "string",
      "description": "Path to source connector recipe YAML file",
      "minLength": 1
    },
    "target_connector": {
      "type": "string",
      "description": "Target connector name (optional, inferred from path)"
    },
    "target_connector_path": {
      "type": "string",
      "description": "Path to target connector recipe YAML file",
      "minLength": 1
    },
    "asset": {
      "type": "string",
      "description": "Asset name (optional, inferred from path)"
    },
    "asset_path": {
      "type": "string",
      "description": "Path to asset definition YAML file",
      "minLength": 1
    },
    "source": {
      "type": "object",
      "description": "Source-specific configuration (merged with connector recipe)",
      "properties": {
        "custom_reader": {
          "type": "string",
          "description": "Path to custom reader plugin (format: path/to/module.py:ClassName or path/to/lib.so:function_name)"
        },
        "tables": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {"type": "string"},
              "object": {"type": "string"}
            },
            "required": ["name"]
          }
        },
        "files": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "path": {"type": "string"},
              "object": {"type": "string"},
              "id": {"type": "string"}
            },
            "required": ["path"]
          }
        },
        "objects": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "connection": {
          "type": "object",
          "description": "Connection configuration (connector-specific)"
        },
        "credentials": {
          "type": "object",
          "description": "Credentials configuration (connector-specific)"
        },
        "incremental": {
          "type": "object",
          "properties": {
            "strategy": {
              "type": "string",
              "enum": ["full_refresh", "incremental", "updated_at", "file_modified_time", "spreadsheet_modified_time"]
            },
            "cursor_field": {
              "type": ["string", "null"],
              "description": "Field name for cursor-based incremental loading (null for full refresh)"
            },
            "lookback_days": {
              "type": ["integer", "null"],
              "minimum": 0,
              "description": "Number of days to look back for incremental loading"
            },
            "state_path": {
              "type": ["string", "null"],
              "description": "Path to state file for incremental loading"
            }
          }
        },
        "engine": {
          "type": "object",
          "properties": {
            "options": {"type": "object"}
          }
        }
      },
      "additionalProperties": true
    },
    "target": {
      "type": "object",
      "description": "Target-specific configuration (merged with connector recipe)",
      "properties": {
        "custom_writer": {
          "type": "string",
          "description": "Path to custom writer plugin (format: path/to/module.py:ClassName or path/to/lib.so:function_name)"
        },
        "file_format": {
          "type": "string",
          "enum": ["parquet", "iceberg", "delta", "csv", "json"]
        },
        "connection": {
          "type": "object",
          "description": "Connection configuration (connector-specific)"
        },
        "catalog": {
          "type": "object",
          "description": "Iceberg catalog configuration"
        },
        "markdown_kv_storage": {
          "type": "object",
          "properties": {
            "mode": {
              "type": "string",
              "enum": ["string", "structured"]
            }
          }
        },
        "engine": {
          "type": "object",
          "properties": {
            "options": {"type": "object"}
          }
        }
      },
      "additionalProperties": true
    },
    "schema_validation_mode": {
      "type": "string",
      "enum": ["strict", "warn"],
      "default": "strict",
      "description": "Schema validation mode: 'strict' fails on errors, 'warn' logs warnings"
    },
    "retry_config": {
      "type": "object",
      "properties": {
        "max_attempts": {"type": "integer", "minimum": 1, "maximum": 10},
        "initial_delay_seconds": {"type": "number", "minimum": 0},
        "max_delay_seconds": {"type": "number", "minimum": 0},
        "backoff_multiplier": {"type": "number", "minimum": 1}
      }
    },
    "logging": {
      "type": "object",
      "properties": {
        "level": {
          "type": "string",
          "enum": ["DEBUG", "INFO", "WARNING", "ERROR", "CRITICAL"],
          "default": "INFO"
        },
        "redaction": {
          "type": "boolean",
          "default": false,
          "description": "Whether to redact sensitive information in logs"
        }
      }
    },
    "infrastructure": {
      "type": "object",
      "description": "External infrastructure integration configuration for cloud-agnostic deployment",
      "required": ["provider"],
      "properties": {
        "provider": {
          "type": "object",
          "description": "Cloud provider configuration",
          "required": ["provider"],
          "properties": {
            "provider": {
              "type": "string",
              "enum": ["aws", "gcp", "azure"],
              "description": "Cloud provider name"
            },
            "region": {
              "type": "string",
              "description": "Default region for resources"
            },
            "project_id": {
              "type": "string",
              "description": "GCP project ID (required for GCP)"
            },
            "account_id": {
              "type": "string",
              "description": "AWS account ID"
            },
            "resources": {
              "type": "array",
              "description": "List of managed infrastructure resources",
              "items": {
                "type": "object",
                "required": ["resource_type"],
                "properties": {
                  "resource_type": {
                    "type": "string",
                    "description": "Resource type (e.g., s3_bucket, iam_role, glue_catalog)"
                  },
                  "resource_id": {
                    "type": "string",
                    "description": "Resource identifier (ARN, URI, etc.)"
                  },
                  "resource_name": {
                    "type": "string",
                    "description": "Human-readable resource name"
                  },
                  "region": {
                    "type": "string",
                    "description": "Resource region"
                  },
                  "tags": {
                    "type": "object",
                    "description": "Resource-level tags",
                    "additionalProperties": {"type": "string"}
                  }
                }
              }
            }
          }
        },
        "terraform": {
          "type": "object",
          "description": "Terraform integration configuration",
          "properties": {
            "module_path": {
              "type": "string",
              "description": "Path to Terraform module"
            },
            "workspace": {
              "type": "string",
              "description": "Terraform workspace name"
            },
            "backend": {
              "type": "object",
              "description": "Terraform backend configuration",
              "additionalProperties": true
            },
            "variables": {
              "type": "object",
              "description": "Terraform input variables",
              "additionalProperties": true
            },
            "outputs": {
              "type": "object",
              "description": "Map Terraform output names to job config fields",
              "additionalProperties": {"type": "string"}
            }
          }
        },
        "tags": {
          "type": "object",
          "description": "Infrastructure-level tags for cost allocation and compliance",
          "properties": {
            "cost_center": {
              "type": "string",
              "description": "Cost center for billing"
            },
            "business_unit": {
              "type": "string",
              "description": "Business unit owner"
            },
            "project": {
              "type": "string",
              "description": "Project name"
            },
            "environment": {
              "type": "string",
              "description": "Environment (dev, staging, prod)"
            },
            "owner": {
              "type": "string",
              "description": "Infrastructure owner"
            },
            "compliance": {
              "type": "array",
              "description": "Compliance requirements (e.g., HIPAA, SOC2)",
              "items": {"type": "string"}
            },
            "custom": {
              "type": "object",
              "description": "Custom tags",
              "additionalProperties": {"type": "string"}
            }
          }
        },
        "metadata": {
          "type": "object",
          "description": "Additional infrastructure metadata",
          "additionalProperties": true
        }
      }
    }
  },
  "additionalProperties": false
}

