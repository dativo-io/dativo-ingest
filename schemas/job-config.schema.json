{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://dativo.io/schemas/job-config.schema.json",
  "title": "Dativo Job Configuration Schema",
  "description": "Schema for validating Dativo ETL job configuration files",
  "type": "object",
  "required": ["tenant_id", "source_connector_path", "target_connector_path", "asset_path"],
  "properties": {
    "$schema": {
      "type": "string",
      "description": "Reference to this schema",
      "default": "schemas/job-config.schema.json"
    },
    "tenant_id": {
      "type": "string",
      "description": "Tenant identifier for multi-tenant deployments",
      "minLength": 1
    },
    "environment": {
      "type": "string",
      "description": "Environment name (e.g., dev, staging, prod)"
    },
    "source_connector": {
      "type": "string",
      "description": "Source connector name (optional, inferred from path)"
    },
    "source_connector_path": {
      "type": "string",
      "description": "Path to source connector recipe YAML file",
      "minLength": 1
    },
    "target_connector": {
      "type": "string",
      "description": "Target connector name (optional, inferred from path)"
    },
    "target_connector_path": {
      "type": "string",
      "description": "Path to target connector recipe YAML file",
      "minLength": 1
    },
    "asset": {
      "type": "string",
      "description": "Asset name (optional, inferred from path)"
    },
    "asset_path": {
      "type": "string",
      "description": "Path to asset definition YAML file",
      "minLength": 1
    },
    "source": {
      "type": "object",
      "description": "Source-specific configuration (merged with connector recipe)",
      "properties": {
        "custom_reader": {
          "type": "string",
          "description": "Path to custom reader plugin (format: path/to/module.py:ClassName or path/to/lib.so:function_name)"
        },
        "tables": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {"type": "string"},
              "object": {"type": "string"}
            },
            "required": ["name"]
          }
        },
        "files": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "path": {"type": "string"},
              "object": {"type": "string"},
              "id": {"type": "string"}
            },
            "required": ["path"]
          }
        },
        "objects": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "connection": {
          "type": "object",
          "description": "Connection configuration (connector-specific)"
        },
        "credentials": {
          "type": "object",
          "description": "Credentials configuration (connector-specific)"
        },
        "incremental": {
          "type": "object",
          "properties": {
            "strategy": {
              "type": "string",
              "enum": ["full_refresh", "incremental", "updated_at", "file_modified_time", "spreadsheet_modified_time"]
            },
            "cursor_field": {
              "type": ["string", "null"],
              "description": "Field name for cursor-based incremental loading (null for full refresh)"
            },
            "lookback_days": {
              "type": ["integer", "null"],
              "minimum": 0,
              "description": "Number of days to look back for incremental loading"
            },
            "state_path": {
              "type": ["string", "null"],
              "description": "Path to state file for incremental loading"
            }
          }
        },
        "engine": {
          "type": "object",
          "properties": {
            "options": {"type": "object"}
          }
        }
      },
      "additionalProperties": true
    },
    "target": {
      "type": "object",
      "description": "Target-specific configuration (merged with connector recipe)",
      "properties": {
        "custom_writer": {
          "type": "string",
          "description": "Path to custom writer plugin (format: path/to/module.py:ClassName or path/to/lib.so:function_name)"
        },
        "file_format": {
          "type": "string",
          "enum": ["parquet", "iceberg", "delta", "csv", "json"]
        },
        "connection": {
          "type": "object",
          "description": "Connection configuration (connector-specific)"
        },
        "catalog": {
          "type": "object",
          "description": "Iceberg catalog configuration"
        },
        "markdown_kv_storage": {
          "type": "object",
          "properties": {
            "mode": {
              "type": "string",
              "enum": ["string", "structured"]
            }
          }
        },
        "engine": {
          "type": "object",
          "properties": {
            "options": {"type": "object"}
          }
        }
      },
      "additionalProperties": true
    },
    "schema_validation_mode": {
      "type": "string",
      "enum": ["strict", "warn"],
      "default": "strict",
      "description": "Schema validation mode: 'strict' fails on errors, 'warn' logs warnings"
    },
    "retry_config": {
      "type": "object",
      "properties": {
        "max_attempts": {"type": "integer", "minimum": 1, "maximum": 10},
        "initial_delay_seconds": {"type": "number", "minimum": 0},
        "max_delay_seconds": {"type": "number", "minimum": 0},
        "backoff_multiplier": {"type": "number", "minimum": 1}
      }
    },
    "logging": {
      "type": "object",
      "properties": {
        "level": {
          "type": "string",
          "enum": ["DEBUG", "INFO", "WARNING", "ERROR", "CRITICAL"],
          "default": "INFO"
        },
        "redaction": {
          "type": "boolean",
          "default": false,
          "description": "Whether to redact sensitive information in logs"
        }
      }
    },
    "catalog": {
      "description": "Optional data catalog lineage configuration. When provided, lineage and governance metadata will be pushed to the referenced data catalog(s).",
      "oneOf": [
        {"$ref": "#/$defs/dataCatalogTarget"},
        {"$ref": "#/$defs/dataCatalogConfig"}
      ]
    }
  },
  "$defs": {
    "dataCatalogConfig": {
      "type": "object",
      "required": ["targets"],
      "properties": {
        "mode": {
          "type": "string",
          "enum": ["sync", "async"],
          "default": "sync",
          "description": "Publishing mode. Async mode will schedule lineage pushes in background threads (future use)."
        },
        "targets": {
          "type": "array",
          "minItems": 1,
          "items": {"$ref": "#/$defs/dataCatalogTarget"}
        }
      },
      "additionalProperties": false
    },
    "dataCatalogTarget": {
      "type": "object",
      "title": "Data catalog target",
      "description": "Definition of a single data catalog that should receive lineage metadata.",
      "required": ["type"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["aws_glue", "databricks_unity", "nessie", "openmetadata"],
          "description": "Catalog provider identifier."
        },
        "name": {
          "type": "string",
          "description": "Friendly name for the catalog target."
        },
        "enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable this catalog target without removing configuration."
        },
        "service": {
          "type": "string",
          "description": "Logical service identifier (used by OpenMetadata/Unity)."
        },
        "catalog": {
          "type": "string",
          "description": "Catalog/catalogue name (Unity/Nessie)."
        },
        "database": {
          "type": "string",
          "description": "Database name (Glue/OpenMetadata)."
        },
        "schema": {
          "type": "string",
          "description": "Schema name (Glue/OpenMetadata/Unity)."
        },
        "table": {
          "type": "string",
          "description": "Override table/entity name; defaults to asset definition name."
        },
        "warehouse": {
          "type": "string",
          "description": "Warehouse/storage location (Nessie fallback)."
        },
        "branch": {
          "type": "string",
          "description": "Branch/ref name for Nessie catalogs."
        },
        "workspace_url": {
          "type": "string",
          "description": "Databricks workspace base URL."
        },
        "token": {
          "type": "string",
          "description": "Authentication token for Databricks/OpenMetadata (if required)."
        },
        "region": {
          "type": "string",
          "description": "AWS region for Glue."
        },
        "uri": {
          "type": "string",
          "description": "REST endpoint URI (Nessie/OpenMetadata)."
        },
        "reference": {
          "type": "string",
          "description": "Optional catalog-specific reference (e.g., Nessie reference name)."
        },
        "upstream": {
          "type": "string",
          "description": "Fully-qualified upstream entity (overrides auto-derived source)."
        },
        "downstream": {
          "type": "string",
          "description": "Fully-qualified downstream entity (overrides auto-derived sink)."
        },
        "connection": {
          "type": "object",
          "description": "Provider-specific connection/options object."
        },
        "options": {
          "type": "object",
          "description": "Additional provider-specific options."
        },
        "timeout_seconds": {
          "type": "integer",
          "minimum": 1,
          "maximum": 120,
          "default": 15,
          "description": "Network timeout when calling catalog APIs."
        }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": false
}

