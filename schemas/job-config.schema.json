{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://dativo.io/schemas/job-config.schema.json",
  "title": "Dativo Job Configuration Schema",
  "description": "Schema for validating Dativo ETL job configuration files",
  "type": "object",
  "required": ["tenant_id", "source_connector_path", "target_connector_path", "asset_path"],
  "properties": {
    "$schema": {
      "type": "string",
      "description": "Reference to this schema",
      "default": "schemas/job-config.schema.json"
    },
    "tenant_id": {
      "type": "string",
      "description": "Tenant identifier for multi-tenant deployments",
      "minLength": 1
    },
    "environment": {
      "type": "string",
      "description": "Environment name (e.g., dev, staging, prod)"
    },
    "source_connector": {
      "type": "string",
      "description": "Source connector name (optional, inferred from path)"
    },
    "source_connector_path": {
      "type": "string",
      "description": "Path to source connector recipe YAML file",
      "minLength": 1
    },
    "target_connector": {
      "type": "string",
      "description": "Target connector name (optional, inferred from path)"
    },
    "target_connector_path": {
      "type": "string",
      "description": "Path to target connector recipe YAML file",
      "minLength": 1
    },
    "asset": {
      "type": "string",
      "description": "Asset name (optional, inferred from path)"
    },
    "asset_path": {
      "type": "string",
      "description": "Path to asset definition YAML file",
      "minLength": 1
    },
    "source": {
      "type": "object",
      "description": "Source-specific configuration (merged with connector recipe)",
      "properties": {
        "custom_reader": {
          "type": "string",
          "description": "Path to custom reader plugin (format: path/to/module.py:ClassName or path/to/lib.so:function_name)"
        },
        "tables": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {"type": "string"},
              "object": {"type": "string"}
            },
            "required": ["name"]
          }
        },
        "files": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "path": {"type": "string"},
              "object": {"type": "string"},
              "id": {"type": "string"}
            },
            "required": ["path"]
          }
        },
        "objects": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "connection": {
          "type": "object",
          "description": "Connection configuration (connector-specific)"
        },
        "credentials": {
          "type": "object",
          "description": "Credentials configuration (connector-specific)"
        },
        "incremental": {
          "type": "object",
          "properties": {
            "strategy": {
              "type": "string",
              "enum": ["full_refresh", "incremental", "updated_at", "file_modified_time", "spreadsheet_modified_time"]
            },
            "cursor_field": {
              "type": ["string", "null"],
              "description": "Field name for cursor-based incremental loading (null for full refresh)"
            },
            "lookback_days": {
              "type": ["integer", "null"],
              "minimum": 0,
              "description": "Number of days to look back for incremental loading"
            },
            "state_path": {
              "type": ["string", "null"],
              "description": "Path to state file for incremental loading"
            }
          }
        },
        "engine": {
          "type": "object",
          "properties": {
            "options": {"type": "object"}
          }
        }
      },
      "additionalProperties": true
    },
    "target": {
      "type": "object",
      "description": "Target-specific configuration (merged with connector recipe)",
      "properties": {
        "custom_writer": {
          "type": "string",
          "description": "Path to custom writer plugin (format: path/to/module.py:ClassName or path/to/lib.so:function_name)"
        },
        "file_format": {
          "type": "string",
          "enum": ["parquet", "iceberg", "delta", "csv", "json"]
        },
        "connection": {
          "type": "object",
          "description": "Connection configuration (connector-specific)"
        },
        "catalog": {
          "type": "object",
          "description": "Iceberg catalog configuration"
        },
        "markdown_kv_storage": {
          "type": "object",
          "properties": {
            "mode": {
              "type": "string",
              "enum": ["string", "structured"]
            }
          }
        },
        "engine": {
          "type": "object",
          "properties": {
            "options": {"type": "object"}
          }
        }
      },
      "additionalProperties": true
    },
    "schema_validation_mode": {
      "type": "string",
      "enum": ["strict", "warn"],
      "default": "strict",
      "description": "Schema validation mode: 'strict' fails on errors, 'warn' logs warnings"
    },
    "retry_config": {
      "type": "object",
      "properties": {
        "max_attempts": {"type": "integer", "minimum": 1, "maximum": 10},
        "initial_delay_seconds": {"type": "number", "minimum": 0},
        "max_delay_seconds": {"type": "number", "minimum": 0},
        "backoff_multiplier": {"type": "number", "minimum": 1}
      }
    },
    "logging": {
      "type": "object",
      "properties": {
        "level": {
          "type": "string",
          "enum": ["DEBUG", "INFO", "WARNING", "ERROR", "CRITICAL"],
          "default": "INFO"
        },
        "redaction": {
          "type": "boolean",
          "default": false,
          "description": "Whether to redact sensitive information in logs"
        }
      }
    },
    "infrastructure": {
      "type": "object",
      "description": "Infrastructure configuration for externally provisioned resources (e.g., Terraform)",
      "properties": {
        "provider": {
          "type": "string",
          "description": "Infrastructure provisioning tool (e.g., terraform, cloudformation, pulumi)",
          "enum": ["terraform", "cloudformation", "pulumi", "manual"]
        },
        "terraform": {
          "type": "object",
          "description": "Terraform-specific configuration",
          "properties": {
            "module_source": {
              "type": "string",
              "description": "Terraform module source (e.g., git::https://github.com/org/repo.git//modules/compute or ./modules/local)"
            },
            "module_version": {
              "type": "string",
              "description": "Version or ref of the Terraform module"
            },
            "workspace": {
              "type": "string",
              "description": "Terraform workspace name"
            },
            "backend_config": {
              "type": "object",
              "description": "Terraform backend configuration reference",
              "additionalProperties": true
            }
          }
        },
        "runtime": {
          "type": "object",
          "description": "Runtime environment configuration",
          "properties": {
            "platform": {
              "type": "string",
              "description": "Execution platform (e.g., kubernetes, ecs, emr, databricks)",
              "enum": ["kubernetes", "ecs", "fargate", "emr", "databricks", "spark", "ray", "dask"]
            },
            "compute": {
              "type": "object",
              "description": "Compute resource specifications",
              "properties": {
                "cluster_id": {
                  "type": "string",
                  "description": "Pre-provisioned cluster identifier"
                },
                "instance_type": {
                  "type": "string",
                  "description": "Instance/node type"
                },
                "instance_count": {
                  "type": "integer",
                  "minimum": 1,
                  "description": "Number of instances/nodes"
                },
                "auto_scaling": {
                  "type": "object",
                  "properties": {
                    "enabled": {"type": "boolean"},
                    "min_instances": {"type": "integer", "minimum": 1},
                    "max_instances": {"type": "integer", "minimum": 1}
                  }
                }
              }
            },
            "storage": {
              "type": "object",
              "description": "Storage resource specifications",
              "properties": {
                "bucket": {
                  "type": "string",
                  "description": "Pre-provisioned storage bucket name"
                },
                "volume_id": {
                  "type": "string",
                  "description": "Pre-provisioned volume identifier"
                },
                "mount_path": {
                  "type": "string",
                  "description": "Mount path for volumes"
                }
              }
            },
            "network": {
              "type": "object",
              "description": "Network configuration",
              "properties": {
                "vpc_id": {
                  "type": "string",
                  "description": "VPC identifier"
                },
                "subnet_ids": {
                  "type": "array",
                  "items": {"type": "string"},
                  "description": "Subnet identifiers"
                },
                "security_group_ids": {
                  "type": "array",
                  "items": {"type": "string"},
                  "description": "Security group identifiers"
                }
              }
            },
            "namespace": {
              "type": "string",
              "description": "Kubernetes namespace or logical grouping"
            },
            "service_account": {
              "type": "string",
              "description": "Service account or IAM role for execution"
            }
          }
        },
        "metadata": {
          "type": "object",
          "description": "Metadata and variables to flow into infrastructure provisioning",
          "properties": {
            "tags": {
              "type": "object",
              "description": "Resource tags for infrastructure",
              "additionalProperties": {"type": "string"}
            },
            "labels": {
              "type": "object",
              "description": "Kubernetes-style labels",
              "additionalProperties": {"type": "string"}
            },
            "annotations": {
              "type": "object",
              "description": "Additional annotations",
              "additionalProperties": {"type": "string"}
            },
            "variables": {
              "type": "object",
              "description": "Custom variables passed to infrastructure as code",
              "additionalProperties": true
            }
          }
        },
        "resources": {
          "type": "object",
          "description": "Pre-provisioned resource identifiers",
          "properties": {
            "database": {
              "type": "object",
              "properties": {
                "endpoint": {"type": "string"},
                "port": {"type": "integer"},
                "database_name": {"type": "string"},
                "instance_id": {"type": "string"}
              }
            },
            "cache": {
              "type": "object",
              "properties": {
                "endpoint": {"type": "string"},
                "cluster_id": {"type": "string"}
              }
            },
            "queue": {
              "type": "object",
              "properties": {
                "url": {"type": "string"},
                "arn": {"type": "string"}
              }
            },
            "secrets": {
              "type": "object",
              "properties": {
                "secret_manager_arn": {"type": "string"},
                "kms_key_id": {"type": "string"}
              }
            }
          },
          "additionalProperties": true
        },
        "outputs": {
          "type": "object",
          "description": "Expected outputs from infrastructure provisioning",
          "additionalProperties": {"type": "string"}
        }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": false
}

